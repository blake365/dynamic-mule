<%- include("partials/header") %>
    <div>
        <h1 class="mt-5 text-center">
            <%= currentUser.username %>'s Profile</h1>
    </div>

    <!-- about us preview -->
    <div class="row justify-content-center align-items-center mb-4">
        <div class="col-lg-5 col-10 content text-left p-2 lead ">
            <h2 class="border-bottom border-info">
                <%= currentUser.name %>
            </h2>
            <%- currentUser.bio %>

        </div>
        <div class="col-lg-5 col-10">
            <img class="img-fluid border border-info mx-auto shadow-sm" src="<%= currentUser.image.secure_url %>">
        </div>
    </div>


    <div class="container pt-5">
        <div class="row">
            <div class="col-12">

                <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="card card-body mb-2">
                        <h3 class="text-center">Update info for "Who We Are"</h3>
                        <div class="form-group">
                            <label for="name">Display Name:</label>
                            <input class="form-control" type="text" id="name" name="name" placeholder="your name" value="<%= currentUser.name %>">
                        </div>
                        <div class="form-group">
                            <label for="bio">Bio: <small>Use html markup to create paragraphs, bold, italics, etc.</small></label>
                            <textarea class="form-control" type="text" id="bio" name="bio" cols="20" rows="5">
<%= currentUser.bio %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="image">Profie Image:</label>
                            <small>this will replace the existing image</small>
                            <input class="" type="file" id="image" name="image">
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label for="email">Email:</label>
                                <input class="form-control" type="email" id="email" name="email" placeholder="email" value="<%= currentUser.email %>">
                            </div>
                            <div class="form-group col">
                                <label for="phone">Phone Number:</label>
                                <input class="form-control" type="tel" id="phone" name="phone" placeholder="phone" value="<%= currentUser.phone %>">
                            </div>
                        </div>
                    </div>
                    <div class="card card-body mb-2 mt-3">
                        <h3 class="text-center ">Update Your Account</h3>
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" id="username" name="username" placeholder="username" value="<%= currentUser.username %>" autofocus required>
                        </div>
                        <div class="form-group">
                            <label for="current-password">Current Password (required to update profile):</label>
                            <input class="form-control" type="password" id="current-password" name="currentPassword" placeholder="current password" required>
                        </div>
                        <div class="form-group">
                            <label for="new-password">New Password:</label>
                            <input class="form-control" type="password" id="new-password" name="newPassword" placeholder="new password">
                        </div>
                        <div class="form-group">
                            <label for="password-confirmation">New Password Confirmation:</label>
                            <input class="form-control" type="password" id="password-confirmation" name="passwordConfirmation" placeholder="password confirmation">
                        </div>
                        <div id="validation-message" class="alert" role="alert"></div>
                        <div class="form-group row justify-content-center mt-5">
                            <input class="btn btn-large btn-block btn-success col-6" type="submit" id="update-profile">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/javascript/profile.js"></script>

    <%- include("partials/footer") %>